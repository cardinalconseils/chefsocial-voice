# ChefSocial Voice Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (SQLite by default)
DATABASE_URL=./chefsocial.db

# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Price IDs
STRIPE_PRICE_COMPLETE=price_complete_plan_id
STRIPE_PRICE_VOICE_OVERAGE=price_voice_overage_id
STRIPE_PRICE_IMAGE_OVERAGE=price_image_overage_id
STRIPE_PRICE_VIDEO_OVERAGE=price_video_overage_id
STRIPE_PRICE_EXTRA_LOCATION=price_extra_location_id
STRIPE_PRICE_EXTRA_USER=price_extra_user_id
STRIPE_PRICE_API_OVERAGE=price_api_overage_id

# Twilio Configuration (for SMS workflows)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# LiveKit Configuration (REQUIRED for voice features)
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Security Configuration
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Feature Flags
ENABLE_SMS_WORKFLOWS=true
ENABLE_LIVEKIT_VOICE=true
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true