{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "marketing-site/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "admin-panel/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/demo.html",
      "dest": "/marketing-site/pages/demo.html"
    },
    {
      "src": "/demo",
      "dest": "/marketing-site/pages/demo.html"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/admin/_next/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/admin/_next/(.*)",
      "dest": "/admin-panel/_next/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin-panel/$1"
    },
    {
      "src": "/admin",
      "dest": "/admin-panel/index.html"
    },
    {
      "src": "/marketing/(.*)",
      "dest": "/marketing-site/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/auth/$1"
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "/dashboard/$1"
    },
    {
      "src": "/apps/(.*)",
      "dest": "/apps/$1"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/marketing-site/pages/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css))",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/javascript; charset=utf-8"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "public": true,
  "github": {
    "silent": true
  }
} 